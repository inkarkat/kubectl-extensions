#!/bin/bash

set -o pipefail

typeset -a filter=()
if [ $# -ge 2 ] && [ "${@:(-2):1}" = -- ]; then
    filter=(grep -e "^[^ ]*${!#}")
    set -- "${@:1:$(($#-2))}"
fi

getAllEvictedPods()
{
    local -r SELECTOR='{{if .status.reason}}{{if eq .status.reason "Evicted" }}{{.metadata.name}}{{"\t"}}{{.status.startTime}}: {{.status.message}}{{"\n"}}{{end}}{{end}}'
    kubectl get pods "$@" -o go-template --template "{{if .items}}{{range .items}}${SELECTOR}{{end}}{{else}}${SELECTOR}{{end}}"
}

typeset -a reldate=()
type -t reldate >/dev/null && reldate=(reldate --date-pattern '\b(?<year>\d\d\d\d)-(?<month>\d\d)-(?<day>\d\d)T(?<hours>\d\d):(?<minutes>\d\d):(?<seconds>\d\d)(?<timezone>Z)\b' --prefer-past)

eval 'getAllEvictedPods "$@"' "${filter:+|}" '"${filter[@]}"' "${reldate:+|}" '"${reldate[@]}"'
