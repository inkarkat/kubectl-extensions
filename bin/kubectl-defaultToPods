#!/bin/bash
shopt -qs extglob

printUsage()
{
    cat <<HELPTEXT
Execute KUBE-COMMAND or "get pods" if none is supplied.
HELPTEXT
    echo
    printf 'Usage: %q %s\n' "$(basename "$1")" '[KUBE-COMMAND ...] [-?|-h|--help]'
}

typeset -a kubectlArgs=()
while [ $# -ne 0 ]
do
    case "$1" in
	--all-namespaces|-A)
			kubectlArgs+=("$1"); shift;;
	--namespace|-n|--selector|-l|--cluster|--context|--template)
			kubectlArgs+=("$1" "$2"); shift; shift;;
	--)		break;;
	*)		break;;
    esac
done
if [ $# -eq 0 ]; then
    set -- get pods

    if ! [ -t 1 -o "$_kubectl_toterm" ]; then
	set -- "$@" --no-headers=true -o go-template --template '{{if .items}}{{range .items}}{{.metadata.name}}{{"\n"}}{{end}}{{else}}{{.metadata.name}}{{"\n"}}{{end}}'
    fi
fi

exec kubectl-wrapper "${kubectlArgs[@]}" "$@"
