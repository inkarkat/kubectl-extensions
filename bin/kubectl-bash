#!/bin/bash

printUsage()
{
    cat <<HELPTEXT
Execute a Bash shell in a container.
HELPTEXT
    echo
    printf 'Usage: %q %s\n' "$(basename "$1")" '(POD | TYPE/NAME) [-c CONTAINER] [flags] [-?|-h|--help]'
}
case "$1" in
    --help|-h|-\?)	shift; printUsage "$0"; exit 0;;
esac

exec kubectl exec -it "$@" -- bash
