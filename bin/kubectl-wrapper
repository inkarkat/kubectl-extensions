#!/bin/bash

# Delegate to our shell function wrapper, as this implements paging and special
# cases there; this is too much to duplicate here.

readonly scriptDir="$([ "${BASH_SOURCE[0]}" ] && dirname -- "${BASH_SOURCE[0]}" || exit 3)"
[ -d "$scriptDir" ] || { echo >&2 'ERROR: Cannot determine script directory!'; exit 3; }
readonly projectDir="${scriptDir}/.."
source "${projectDir}/shell/wrappers.sh"

kubectl "$@"
